# .env Template - Copy and fill with your values

# ==========================================
# DISCORD BOT CONFIGURATION
# ==========================================
# Get token from: https://discord.com/developers/applications

DISCORD_TOKEN=your_discord_bot_token_here

# Your Discord user ID (for admin commands)
# Enable Developer Mode in Discord → Right-click username → Copy User ID
ADMIN_ID=your_discord_user_id_here

# ==========================================
# STEAM ACCOUNT CONFIGURATION
# ==========================================
# Use a dedicated Steam account for the bot (recommended)
# Get Shared Secret and Identity Secret from Steam authenticator backup codes

STEAM_USERNAME=your_steam_username
STEAM_PASSWORD=your_steam_password
STEAM_ACCOUNT_NAME=your_steam_account_name
STEAM_SHARED_SECRET=your_steam_shared_secret
STEAM_IDENTITY_SECRET=your_steam_identity_secret

# ==========================================
# BINANCE API CONFIGURATION
# ==========================================
# Get keys from: https://www.binance.com → API Management
# Enable "Spot Trading" and "Withdraw" permissions

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ==========================================
# BOT SETTINGS
# ==========================================

BOT_PREFIX=!
DEFAULT_LANGUAGE=en

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

DB_PATH=./data/bot.db

# ==========================================
# LOGGING
# ==========================================

LOG_LEVEL=info
NODE_ENV=production

